<template>
  <view class="common-button-component" catchtap="handleClick" wx:if="{{ text }}">{{text}}</view>
</template>

<script>
  import { createComponent } from '@mpxjs/core'

  createComponent({
    properties: {
      text: {
        type: [String, Number],
        value: ''
      },
      disabled: {
        type: Boolean,
        value: false
      }
    },
    methods: {
      handleClick () {
        if (this.disabled) return
        this.triggerEvent('clicked')
      }
    }
  })
</script>

