<template>
  <view class="single-avatar-component-box" wx:style="{{bgStyle}}">
    <!-- <image wx:if="{{ __mpx_mode__ === 'wx' && url}}" src="{{url}}" class="single-avatar-component" />
    <img wx:elif="{{ __mpx_mode__ === 'web' && url}}" src="{{url}}" class="single-avatar-component" /> -->
  </view>
</template>

<script>
  import { createComponent } from '@mpxjs/core'

  createComponent({
    properties: {
      url: {
        type: String,
        value: ''
      }
    },
    computed: {
      bgStyle () {
        return {
          backgroundImage: `url(${this.url})`
        }
      }
    }
  })
</script>

